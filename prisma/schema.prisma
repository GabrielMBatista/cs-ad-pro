generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Campaign {
  id        String  @id
  createdAt BigInt
  prompt    String
  imageUrl  String
  overlays  String  // JSON string
  skinJson  String? // JSON string of CSGOSkin
  status    String  @default("draft")
}
